<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	 http://code.alibabatech.com/schema/dubbo	http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
       default-lazy-init="false" default-autowire="byName">

    <description>dubbo provider配置</description>

    <dubbo:application name="provider-test" />

    <dubbo:registry address="192.168.12.25:2181,192.168.12.26:2181,192.168.12.27:2181" protocol="zookeeper" id="providerTest" register="false"/>

    <dubbo:protocol name="dubbo" port="20884" dispather="all" threadpool="cached" threads="5000" />

    <dubbo:consumer check="false"/>

    <dubbo:service interface="com.huwei.api.ITestApi"
                   ref="testApi"
                   registry="providerTest"
                   timeout="5000"
                   loadbalance="roundrobin"
                   owner="zuokui.fu"
                   version="1.0" />
</beans>